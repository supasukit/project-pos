{
  "name": "project-pos",
  "version": "1.0.0",
  "description": "POS System for shop using Electron.js, MongoDB and Vanilla JavaScript with Enhanced Security",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "server": "node server/server.js",
    "server:dev": "nodemon server/server.js",
    "web": "node server/server.js",
    "web:dev": "nodemon server/server.js",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:mac": "electron-builder --mac",
    "build:linux": "electron-builder --linux",
    "dist": "electron-builder --publish=never",
    "pack": "electron-builder --dir",
    "seed": "node server/seeders/index.js seed",
    "db:seed": "node server/seeders/index.js seed",
    "db:clear": "node server/seeders/index.js clear",
    "setup": "node scripts/setup.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint main.js preload.js server/**/*.js client/**/*.js",
    "lint:fix": "eslint main.js preload.js server/**/*.js client/**/*.js --fix",
    "postinstall": "electron-builder install-app-deps",
    "security-audit": "npm audit",
    "security-fix": "npm audit fix"
  },
  "keywords": [
    "pos",
    "point-of-sale",
    "electron",
    "mongodb",
    "retail",
    "shop",
    "desktop-app",
    "nodejs",
    "express",
    "security"
  ],
  "author": "supasukit",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/supasukit/project-pos.git"
  },
  "homepage": "https://github.com/supasukit/project-pos#readme",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "csv-writer": "^1.6.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^7.1.5",
    "express-slow-down": "^1.6.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.2.0",
    "html2canvas": "^1.4.1",
    "jsonwebtoken": "^9.0.2",
    "jspdf": "^2.5.1",
    "moment": "^2.29.4",
    "mongoose": "^8.16.4",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "node-thermal-printer": "^4.4.4",
    "nodemailer": "^7.0.5",
    "qrcode": "^1.5.3",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "electron-packager": "^17.1.1",
    "eslint": "^8.55.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.0",
    "eslint-plugin-n": "^16.4.0",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.supasukit.project-pos",
    "productName": "POS System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "client/**/*",
      "server/**/*",
      "assets/**/*",
      "scripts/**/*",
      "node_modules/**/*",
      "!server/logs/**/*",
      "!server/uploads/**/*",
      "!server/backups/**/*",
      "!client/node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "server",
        "filter": [
          "**/*",
          "!logs/**/*",
          "!uploads/**/*",
          "!backups/**/*"
        ]
      }
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ],
      "icon": "assets/icon.icns"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "installerIcon": "assets/icon.ico",
      "uninstallerIcon": "assets/icon.ico"
    }
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "server/**/*.js",
      "renderer/**/*.js",
      "!server/seeders/**",
      "!server/tests/**",
      "!**/node_modules/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "standard"
    ],
    "env": {
      "node": true,
      "browser": true,
      "es2021": true,
      "jest": true
    },
    "parserOptions": {
      "ecmaVersion": 12,
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn"
    }
  },
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/supasukit/project-pos/issues"
  }
}
